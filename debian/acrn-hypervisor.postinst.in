#!/bin/sh
# postinst script for acrn-hypervisor
#
# see: dh_installdeb(1)

set -e

. /usr/share/debconf/confmodule

db_get acrn-hypervisor/board
BOARD=${RET}
db_get acrn-hypervisor/scenario
SCENARIO=${RET}

ACRNOUT="/usr/lib/acrn/acrn.${BOARD}.uefi.${SCENARIO}.32.out"
ACRNCFG="/usr/lib/acrn/acrn.${BOARD}.${SCENARIO}.config"
ACRNMAP="/usr/lib/acrn/acrn.${BOARD}.${SCENARIO}.map"
ACRNBIN="/usr/lib/acrn/acrn.${BOARD}.${SCENARIO}.bin"

case "$1" in
    configure)
        if command -v update-grub > /dev/null && [ -d /boot/grub ] && [ -f ${ACRN} ]; then
            cp ${ACRNOUT} /boot/acrn-@acrnversion@.out
            cp ${ACRNCFG} /boot/acrn-@acrnversion@.config
            cp ${ACRNMAP} /boot/acrn-@acrnversion@.map
            cp ${ACRNBIN} /boot/acrn-@acrnversion@.bin
            update-grub || :
        fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
